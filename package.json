{
  "name": "hawks-coach-hub",
  "version": "1.0.0",
  "description": "Professional web application for Hawks Helsinki coaches to access training resources from Google Drive",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src",
    "index.html"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,html,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,html,css,md}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "commit": "git-cz"
  },
  "keywords": [
    "floorball",
    "coaching",
    "hawks-helsinki",
    "google-drive",
    "training-resources",
    "sports"
  ],
  "author": "Hawks Helsinki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikkomakipaa/hawks-coach-hub.git"
  },
  "homepage": "https://mikkomakipaa.github.io/hawks-coach-hub",
  "bugs": {
    "url": "https://github.com/mikkomakipaa/hawks-coach-hub/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.4.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitest/ui": "^0.34.5",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-vitest": "^0.3.2",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.5",
    "@vitest/coverage-v8": "^0.34.5",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "terser": "^5.24.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
